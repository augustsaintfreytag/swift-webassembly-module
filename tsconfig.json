{
	"compilerOptions": {
		"target": "esnext",
		"module": "commonjs",
		"moduleResolution": "node",

		"sourceMap": true,
		"declaration": true,
		"declarationDir": "dist",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,

		"strict": true,

		"types": ["@types/node"],

		"outDir": "dist",
		"rootDir": "src",
		"baseUrl": "src",
		"paths": {
			"~/*": ["./*"]
		},

		"plugins": [{ "transform": "typescript-transform-paths" }, { "transform": "typescript-transform-paths", "afterDeclarations": true }]
	}
}
